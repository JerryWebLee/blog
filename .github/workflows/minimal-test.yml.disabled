name: Minimal Test

on:
  push:
    branches: [main]

jobs:
  minimal:
    name: Minimal Test
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: latest

      - name: Show versions
        run: |
          echo "Node version: $(node --version)"
          echo "pnpm version: $(pnpm --version)"

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Test lint
        run: pnpm run lint

      - name: Success
        run: echo "Minimal test completed successfully!"
