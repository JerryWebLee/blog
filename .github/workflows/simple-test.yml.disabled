name: Simple Test

on:
  push:
    branches: [main]

jobs:
  simple-test:
    name: Simple Test
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: latest

      - name: Show Node version
        run: |
          echo "Node version:"
          node --version
          echo "pnpm version:"
          pnpm --version

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Show package.json scripts
        run: |
          echo "Available scripts:"
          pnpm run --help

      - name: Test lint
        run: pnpm run lint

      - name: Test type-check
        run: pnpm run type-check

      - name: Test format-check
        run: pnpm run format:check

      - name: Test build
        run: pnpm run build

      - name: Success
        run: echo "All tests passed!"
